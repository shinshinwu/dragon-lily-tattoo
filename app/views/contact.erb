    <script>
        $(document).ready(function() {
            $('#contactForm').submit(function(e){
                e.preventDefault();

                var url = $(this).attr('action');
                var data = $(this).serialize();

                $.post(url, data, function(response){
                    $('#form').remove();
                    $('#contact').append("<h3>Thank you for contacting us, below is the message that have been send to Admin and someone will reach out to you shortly.");
                    $('#contact').append(response);
                })
            });

        });
    </script>